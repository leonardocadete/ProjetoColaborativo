@model System.Collections.Generic.IEnumerable<ProjetoColaborativo.Business.Usuario.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuários</h2>
@Html.ActionLink("Inserir", "Create", null, new {@class = "btn btn-default"})
<br/>
<br/>
<form action="@Url.Action("Index")" method="get">
    <input type="text" name="q"/>
    <input type="submit" value="Buscar"/>
</form>

<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Login
        </th>
        <th>
            Cpf
        </th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.Nome
        </td>
        <td>
            @item.Login
        </td>
        <td>
            @item.Cpf
        </td>
        <td>
            @if (item.EhUsuarioLogado)
            {
                @Html.ActionLink("Editar", "Create", new {id = item.Handle})
                <spam>&nbsp&nbsp&nbsp</spam> 
                @Html.ActionLink("Excluir", "Delete", new {id = item.Handle})
            }
        </td>
    </tr>
    }
</table>
